@using BlogProject3.PresentationLayer.Helpers                @* Burası Helpers'taki ToDaysAgo metodunu çekiyor. *@
@model List<Comment>






<div class="custombox clearfix">
    <h4 class="small-title">Yorumlar</h4>
    <div class="row">
        <div class="col-lg-12">
            <div class="comments-list">
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <div class="media">
                            <a class="media-left" href="#">
                                <img src="@item.AppUser.ImageUrl" alt="" class="rounded-circle" style="width: 75px; height: 75px; object-fit: cover">
                            </a>
                            <div class="media-body">
                                <h4 class="media-heading user_name">@item.AppUser.Name @item.AppUser.Surname <small>@item.CreatedDate.ToDaysAgo()</small></h4>
                                <p>@item.CommentDetail</p>
                                <a href="#" class="btn btn-primary btn-sm">Cevapla</a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>Bu yazıya henüz yorum yapılmadı. İlk yorumu yapan siz olun!</p>
                }
            </div><!-- end row -->
        </div><!-- end custom-box -->
    </div>
</div><!-- end col -->
