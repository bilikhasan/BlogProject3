@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_AuthorLayout</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sidebar ve Content</title>

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .layout-container {
            display: grid;
            grid-template-columns: 250px 1fr;
            min-height: 100vh;
        }

        .sidebar {
            background-color: #2c3e50;
            color: #ecf0f1;
            padding: 20px;
        }

        .content {
            padding: 20px;
            background-color: #f5f5f5;
        }

        .sidebar a {
            color: #ecf0f1;
            text-decoration: none;
            display: block;
            margin-bottom: 10px;
        }

            .sidebar a:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>
    <div class="layout-container">
        <div class="sidebar">
            <h2>Menü</h2>
            <a href="/Author/Article/Index/">Yazılarım</a>
            <a href="/Author/Profile/EditMyProfile">Profilim</a>
            <a href="/Default/Index/">Siteye Git</a>
            <a href="#">Ayarlar</a>
            <a href="#">Çıkış Yap</a>
            <a href="#">Yorumlarım</a>
        </div>
        <div class="content">
            @RenderBody()
        </div>
    </div>
</body>

</html>