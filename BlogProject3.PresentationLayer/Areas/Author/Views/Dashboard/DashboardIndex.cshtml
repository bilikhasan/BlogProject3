@{
    ViewData["Title"] = "DashboardIndex";
    Layout = "~/Areas/Author/Views/_AuthorLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="dashboard">

        <header class="dashboard-header">
            <h1>Merhaba, Yazar Paneline Hoş Geldiniz!</h1>
        </header>
        <div class="dashboard-cards">
            <div class="card">
                <h4>Toplam Kategori Sayısı</h4>
                <p>@ViewBag.TotalCategories</p>
            </div>
            <div class="card">
                <h4>Toplam Blog Yazılarım</h4>
                <p>@ViewBag.ArticleCount</p>
            </div>
            <div class="card">
                <h4>Toplam Yorumlarım</h4>
                <p>@ViewBag.CommentCount</p>
            </div>
            <div class="card">
                <h4>Toplam Yazı Sayısı</h4>
                <p>@ViewBag.AllArticleCount</p>
            </div>
        </div>
    </div>
</body>
</html>





<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #f7f9fc;
        color: #333;
    }

    .dashboard {
        padding: 20px;
    }

    .dashboard-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .dashboard-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .card {
        background-color: #fff;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .card h2 {
            margin: 0 0 10px;
            font-size: 1.5rem;
        }

        .card p {
            font-size: 2rem;
            font-weight: bold;
            margin: 0;
        }

        .card:nth-child(1) {
            background-color: #dfe7fd;
            color: #1a3e72;
        }

        .card:nth-child(2) {
            background-color: #c2f0c2;
            color: #2c5e2c;
        }

        .card:nth-child(3) {
            background-color: #ffe4e1;
            color: #b22222;
        }

        .card:nth-child(4) {
            background-color: #ffecb3;
            color: #856404;
        }
</style>