@model List<Comment>

@{
    Layout = "~/Areas/Author/Views/_AuthorLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <table class="table table-bordered table-hover">
        <tr>
            <th>ID</th>
            <th>Yorum Detay</th>
            <th>Yorum Sil</th>
            <th>Yorum Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ArticleId</td>
                <td>@item.CommentDetail</td>
                <td><a href="/Author/Comment/CommentDelete/@item.CommentId" class="btn btn-danger">Sil</a> </td>
                <td><a href="/Author/Comment/CommentUpdate/@item.CommentId" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </table>
</div>